{
	"compilerOptions": {
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Bundler",
		"resolveJsonModule": false,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"outDir": "./dist",
		"rootDir": ".",
		"module": "ES2022",
		"target": "ESNext",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@": ["./src"]
		}
	},
	"include": ["./src", "./tests"]
}
